<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/crema_claro"
    android:padding="16dp">

    <!-- titulo de la pantalla -->
    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mi agenda de contactos"
        android:textAlignment="center"
        android:textColor="@color/texto_principal"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <!-- boton que agrega contactos-->
    <Button
        android:id="@+id/botonAgregar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar contacto"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/aqua_profundo"
        android:layout_below="@id/titulo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />

    <!-- lista de contactos-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerContactos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/botonAgregar"
        android:layout_marginTop="12dp" />
</RelativeLayout>


