<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/crema_claro"
    android:padding="24dp"
    android:gravity="center_horizontal">

    <!-- Nombre del contacto -->
    <TextView
        android:id="@+id/txtCirculo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:gravity="center"
        android:text=""
        android:textSize="48sp"
        android:textColor="@android:color/white"
        android:background="@drawable/circle_background"
        android:elevation="4dp"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:id="@+id/txtNombreCompleto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre completo"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/texto_principal"
        android:layout_marginBottom="8dp"/>

    <!-- compania del contacto -->
    <TextView
        android:id="@+id/txtCompaniaContacto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Empresa"
        android:textSize="18sp"
        android:textColor="@color/texto_secundario"
        android:layout_marginBottom="16dp" />

    <!-- correo electronico del contacto-->
    <TextView
        android:id="@+id/txtCorreoContacto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="correo@ejemplo.com"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <!-- telefono del contacto -->
    <TextView
        android:id="@+id/txtTelefonoContacto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6441234567"
        android:textSize="16sp"
        android:layout_marginBottom="40dp" />

    <!-- Boton de llamar -->
    <Button
        android:id="@+id/btnLlamar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/aqua_profundo"
        android:text="Llamar"
        android:textColor="@android:color/white" />

</LinearLayout>
